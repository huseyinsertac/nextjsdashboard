generator client {
  provider = "prisma-client"
  output      = "../generated/prisma"
  binaryTargets   = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "mongodb"
  url = env("MONGODB_URI")
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String @unique
  password String
}

model Customer {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String
  image_url String

  invoices  Invoice[]
}

enum InvoiceStatus {
  pending
  paid
}

model Invoice {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  customerId  String   @db.ObjectId
  amount      Int
  status      InvoiceStatus
  date        DateTime

  customer    Customer @relation(fields: [customerId], references: [id])
}

model Revenue {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  month   String @unique
  revenue Int
}

